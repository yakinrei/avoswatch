<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/raposa">

    <TextView
        android:id="@+id/avoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/w2"
        android:text="Av"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/w3"
        android:text="."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/centTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/w2"
        android:text="Ce"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/periodoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:layout_marginTop="45sp"
        android:fontFamily="@font/w4"
        android:text="periodo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/bateriaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="85sp"
        android:layout_marginTop="200sp"
        android:fontFamily="@font/w3"
        android:gravity="end"
        android:text="bateria"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FCF2C4"
        android:textSize="14sp" />

</RelativeLayout>
