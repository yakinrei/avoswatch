    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/avoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av"
                    android:fontFamily="@font/w2"
                    android:textColor="#000000"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/w3"
                    android:textColor="#000000"
                    android:text="."
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/centesimoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/w2"
                    android:textColor="#000000"
                    android:text="Ce"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/w3"
                    android:padding="1dp"
                    android:text=":::"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/sextoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/w2"
                    android:textColor="#000000"
                    android:text="S"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/periodoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/w4"
            android:gravity="end"
            android:text="periodo"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bateriaTextView"
            android:layout_marginTop="120sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/w3"
            android:gravity="end"
            android:text="bateria"
            android:textColor="#FCF2C4"
            android:textSize="14sp" />

    </LinearLayout>


</FrameLayout>